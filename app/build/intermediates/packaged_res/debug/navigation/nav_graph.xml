<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/findFalconFragment">


    <fragment
        android:id="@+id/findFalconFragment"
        android:name="com.traktez.findfalconeproject.ui.fragments.FindFalconFragment"
        tools:layout="@layout/fragment_find_falcon">

        <action
            android:id="@+id/toResultFragment"
            app:destination="@id/resultFragment" />

    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.traktez.findfalconeproject.ui.fragments.ResultFragment"
        tools:layout="@layout/fragment_result">

        <argument
            android:name="time_taken"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="planet_name"
            app:argType="string"
            app:nullable="false" />

    </fragment>

</navigation>